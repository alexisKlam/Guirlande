<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Guirlande.Server"
             x:Class="GuirdServ.MainPage" Title="Admin Guirlande">
    <ContentPage.Content>
        <StackLayout>
            <Entry Margin="0,50" Text="" Placeholder="Total Device" x:Name="TotalDeviceEntry" Keyboard="Numeric" ></Entry>
            <Label  x:Name="CurrentEntry"></Label>
            <Stepper x:Name="ChoiceGuirlande"  Value="0" ValueChanged="ChoiceGuirlande_OnValueChanged"></Stepper>
           <Button Text="Commencer" Clicked="StartClicked" VerticalOptions="End"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>